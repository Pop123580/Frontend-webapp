/* src/styles/auth.css */

/* ===== Auth Layout ===== */
.auth-container {
    min-height: 100vh;
    display: flex;
    background: linear-gradient(135deg, #f5f0e8 0%, #e8e0d5 100%);
}

.auth-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40px;
    background: linear-gradient(135deg, #8b7355 0%, #6b5344 100%);
    color: #fff;
}

.auth-left h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    font-weight: 700;
}

.auth-left p {
    font-size: 1.2rem;
    text-align: center;
    max-width: 400px;
    opacity: 0.9;
    line-height: 1.6;
}

.auth-logo {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 30px;
    font-size: 2.5rem;
}

.auth-features {
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.auth-feature {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1rem;
    opacity: 0.9;
}

.auth-feature-icon {
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ===== Auth Form Side ===== */
.auth-right {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px;
}

.auth-form-container {
    width: 100%;
    max-width: 420px;
    background: #fff;
    padding: 50px 40px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(107, 83, 68, 0.1);
}

.auth-form-header {
    text-align: center;
    margin-bottom: 35px;
}

.auth-form-header h2 {
    font-size: 1.8rem;
    color: #5a4a3f;
    margin-bottom: 10px;
    font-weight: 600;
}

.auth-form-header p {
    color: #8b7355;
    font-size: 0.95rem;
}

/* ===== Form Elements ===== */
.form-group {
    margin-bottom: 22px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: #5a4a3f;
    font-weight: 500;
    font-size: 0.9rem;
}

.form-group input {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e8e0d5;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #faf8f5;
    color: #5a4a3f;
}

.form-group input:focus {
    outline: none;
    border-color: #8b7355;
    background: #fff;
    box-shadow: 0 0 0 4px rgba(139, 115, 85, 0.1);
}

.form-group input::placeholder {
    color: #b5a89a;
}

.input-icon-wrapper {
    position: relative;
}

.input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: #8b7355;
    font-size: 1.1rem;
}

.input-icon-wrapper input {
    padding-left: 48px;
}

.password-toggle {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #8b7355;
    cursor: pointer;
    font-size: 1.1rem;
    padding: 5px;
}

.password-toggle:hover {
    color: #6b5344;
}

/* ===== Auth Button ===== */
.auth-btn {
    width: 100%;
    padding: 16px;
    background: linear-gradient(135deg, #8b7355 0%, #6b5344 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
}

.auth-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(107, 83, 68, 0.3);
}

.auth-btn:active {
    transform: translateY(0);
}

.auth-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
}

.auth-btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: #fff;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* ===== Divider ===== */
.auth-divider {
    display: flex;
    align-items: center;
    margin: 25px 0;
    color: #b5a89a;
    font-size: 0.85rem;
}

.auth-divider::before,
.auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e8e0d5;
}

.auth-divider span {
    padding: 0 15px;
}

/* ===== Social Login ===== */
.social-login {
    display: flex;
    gap: 12px;
}

.social-btn {
    flex: 1;
    padding: 12px;
    border: 2px solid #e8e0d5;
    border-radius: 12px;
    background: #fff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #5a4a3f;
    font-weight: 500;
}

.social-btn:hover {
    border-color: #8b7355;
    background: #faf8f5;
}

.social-btn img {
    width: 20px;
    height: 20px;
}

/* ===== Auth Footer ===== */
.auth-footer {
    text-align: center;
    margin-top: 30px;
    color: #8b7355;
    font-size: 0.95rem;
}

.auth-footer a {
    color: #6b5344;
    font-weight: 600;
    text-decoration: none;
    transition: color 0.3s ease;
}

.auth-footer a:hover {
    color: #8b7355;
    text-decoration: underline;
}

/* ===== Error Message ===== */
.error-message {
    background: #fef2f2;
    border: 1px solid #fecaca;
    color: #dc2626;
    padding: 12px 16px;
    border-radius: 10px;
    margin-bottom: 20px;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 10px;
}

.success-message {
    background: #f0fdf4;
    border: 1px solid #bbf7d0;
    color: #16a34a;
    padding: 12px 16px;
    border-radius: 10px;
    margin-bottom: 20px;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 10px;
}

/* ===== Forgot Password ===== */
.forgot-password {
    text-align: right;
    margin-top: -15px;
    margin-bottom: 20px;
}

.forgot-password a {
    color: #8b7355;
    font-size: 0.85rem;
    text-decoration: none;
}

.forgot-password a:hover {
    text-decoration: underline;
}

/* ===== Remember Me ===== */
.remember-me {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
}

.remember-me input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: #8b7355;
    cursor: pointer;
}

.remember-me label {
    color: #5a4a3f;
    font-size: 0.9rem;
    cursor: pointer;
}

/* ===== Password Strength ===== */
.password-strength {
    margin-top: 8px;
}

.strength-bar {
    height: 4px;
    background: #e8e0d5;
    border-radius: 2px;
    overflow: hidden;
}

.strength-fill {
    height: 100%;
    border-radius: 2px;
    transition: all 0.3s ease;
}

.strength-fill.weak {
    width: 33%;
    background: #ef4444;
}

.strength-fill.medium {
    width: 66%;
    background: #f59e0b;
}

.strength-fill.strong {
    width: 100%;
    background: #22c55e;
}

.strength-text {
    font-size: 0.75rem;
    margin-top: 4px;
    color: #8b7355;
}

/* ===== Responsive ===== */
@media (max-width: 968px) {
    .auth-container {
        flex-direction: column;
    }

    .auth-left {
        padding: 40px 20px;
        min-height: auto;
    }

    .auth-left h1 {
        font-size: 2rem;
    }

    .auth-features {
        display: none;
    }

    .auth-right {
        padding: 30px 20px;
    }

    .auth-form-container {
        padding: 30px 25px;
    }
}

@media (max-width: 480px) {
    .auth-form-container {
        padding: 25px 20px;
        border-radius: 15px;
    }

    .auth-form-header h2 {
        font-size: 1.5rem;
    }

    .social-login {
        flex-direction: column;
    }
}
